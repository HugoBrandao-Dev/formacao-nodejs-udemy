<%- include ("partials/header.ejs") %>
<body>
	<%- include ("partials/navbar.ejs") %>
	<div class="container">
		<h1>Pergunta</h1>
		<hr>
		<div class="card">
			<div class="card-header">
				<h3><%= pergunta.titulo %></h3>
			</div>
			<div class="card-body">
				<%= pergunta.descricao %>
			</div>
		</div>
		<br>
		<h4>Responda</h4>
		<form>
			<input type="hidden" name="num_id" value="<%= pergunta.id %>">
			<label>Resposta</label>
			<textarea name="txt-resposta" placeholder="Digite sua resposta" class="form-control"></textarea>
			<br>
			<button class="btn btn-primary">Responder</button>
		</form>
	</div>
</body>
<%- include ("partials/footer.ejs") %>